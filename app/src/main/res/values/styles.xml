<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNight" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@color/colorNightButtonBackground</item>
        <item name="android:textColor">@color/colorNightSymbol</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="ButtonNightLeft" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@color/colorNightButtonBackground</item>
        <item name="android:textColor">@color/colorNightSymbol</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="ButtonNightRight" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@color/colorNightButtonBackground</item>
        <item name="android:textColor">@color/colorNightSymbol</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

</resources>
